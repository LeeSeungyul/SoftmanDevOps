<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Test configuration - minimal console output only -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set root logger level to WARN for tests to reduce noise -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Application logger can be set to INFO if needed for debugging -->
    <logger name="com.softman.devops" level="WARN"/>
</configuration>